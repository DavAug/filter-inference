<?xml version="1.0" encoding="UTF-8"?>
<sbml xmlns="http://www.sbml.org/sbml/level3/version2/core" level="3" version="2">
  <model id="lambert_growth_factor_model" timeUnits="second">

    <listOfUnitDefinitions>
      <unitDefinition id="per_second">
        <listOfUnits>
          <unit kind="second" exponent="-1" scale="0" multiplier="1"/>
        </listOfUnits>
      </unitDefinition>
      <unitDefinition id="mg">
        <listOfUnits>
          <unit kind="gram" exponent="1" scale="-3" multiplier="1"/>
        </listOfUnits>
      </unitDefinition>
      <unitDefinition id="mg_per_L_per_second">
        <listOfUnits>
          <unit kind="gram" exponent="1" scale="-3" multiplier="1"/>
          <unit kind="liter" exponent="-1" scale="0" multiplier="1"/>
          <unit kind="second" exponent="-1" scale="0" multiplier="1"/>
        </listOfUnits>
      </unitDefinition>
      <unitDefinition id="L_per_mg_per_second">
        <listOfUnits>
          <unit kind="liter" exponent="1" scale="0" multiplier="1"/>
          <unit kind="gram" exponent="-1" scale="-3" multiplier="1"/>
          <unit kind="second" exponent="-1" scale="0" multiplier="1"/>
        </listOfUnits>
      </unitDefinition>
      <unitDefinition id="mg_per_l">
        <listOfUnits>
          <unit kind="gram" exponent="1" scale="-3" multiplier="1"/>
          <unit kind="liter" exponent="-1" scale="0" multiplier="1"/>
        </listOfUnits>
      </unitDefinition>
    </listOfUnitDefinitions>

    <listOfCompartments>
      <compartment id="central" name="central" size="1" units="liter"/>
    </listOfCompartments>

    <listOfSpecies>
      <!-- Receptor -->
      <species id="receptor_inactive" name="receptor_inactive" compartment="central" initialAmount="0" hasSubstanceUnits="false" substanceUnits="mg"/>
      <species id="receptor_active" name="receptor_active" compartment="central" initialAmount="0" hasSubstanceUnits="false" substanceUnits="mg"/>

      <!-- Ligand -->
      <species id="ligand" name="ligand" compartment="central" initialAmount="0" hasSubstanceUnits="false" substanceUnits="mg"/>
    </listOfSpecies>

    <listOfParameters>
      <!-- Receptor synthesis, activation, deactivation and degradation -->
      <parameter id="production_rate" value="1" constant="true" units="mg_per_L_per_second"/>
      <parameter id="activation_rate" value="1" constant="true" units="L_per_mg_per_second"/>
      <parameter id="deactivation_rate" value="1" constant="true" units="per_second"/>
      <parameter id="degradation_rate_active_receptor" value="1" constant="true" units="per_second"/>
      <parameter id="degradation_rate_inactive_receptor" value="1" constant="true" units="per_second"/>
    </listOfParameters>

    <listOfReactions>
      <!-- Synthesis of inactive receptor -->
      <reaction id="receptor_production" name="receptor_production" reversible="false" fast="false">
        <listOfProducts>
          <speciesReference species="receptor_inactive"/>
        </listOfProducts>
        <kineticLaw>
          <math xmlns="http://www.w3.org/1998/Math/MathML">
            <apply>
              <times/>
              <cn> 1 </cn>
              <ci> production_rate </ci>
            </apply>
          </math>
        </kineticLaw>
      </reaction>

      <!-- Activation of receptor through ligand -->
      <reaction id="receptor_activation" name="receptor_activation" reversible="false" fast="false">
        <listOfReactants>
          <speciesReference species="receptor_inactive"/>
        </listOfReactants>
        <listOfProducts>
          <speciesReference species="receptor_active"/>
        </listOfProducts>
        <listOfModifiers>
          <modifierSpeciesReference species="ligand"/>
        </listOfModifiers>
        <kineticLaw>
          <math xmlns="http://www.w3.org/1998/Math/MathML">
            <apply>
              <times/>
              <ci> activation_rate </ci>
              <ci> ligand </ci>
              <ci> receptor_inactive </ci>
            </apply>
          </math>
        </kineticLaw>
      </reaction>

      <!-- Deactivation of receptor -->
      <reaction id="receptor_deactivation" name="receptor_deactivation" reversible="false" fast="false">
        <listOfReactants>
          <speciesReference species="receptor_active"/>
        </listOfReactants>
        <listOfProducts>
          <speciesReference species="receptor_inactive"/>
        </listOfProducts>
        <kineticLaw>
          <math xmlns="http://www.w3.org/1998/Math/MathML">
            <apply>
              <times/>
              <ci> deactivation_rate </ci>
              <ci> receptor_active </ci>
            </apply>
          </math>
        </kineticLaw>
      </reaction>

      <!-- Degradation of inactive receptor -->
      <reaction id="inactive_receptor_degradation" name="inactive_receptor_degradation" reversible="false" fast="false">
        <listOfReactants>
          <speciesReference species="receptor_inactive"/>
        </listOfReactants>
        <kineticLaw>
          <math xmlns="http://www.w3.org/1998/Math/MathML">
            <apply>
              <times/>
              <ci> degradation_rate_inactive_receptor </ci>
              <ci> receptor_inactive </ci>
            </apply>
          </math>
        </kineticLaw>
      </reaction>

      <!-- Degradation of active receptor -->
      <reaction id="active_receptor_degradation" name="active_receptor_degradation" reversible="false" fast="false">
        <listOfReactants>
          <speciesReference species="receptor_active"/>
        </listOfReactants>
        <kineticLaw>
          <math xmlns="http://www.w3.org/1998/Math/MathML">
            <apply>
              <times/>
              <ci> degradation_rate_active_receptor </ci>
              <ci> receptor_active </ci>
            </apply>
          </math>
        </kineticLaw>
      </reaction>

    </listOfReactions>
  </model>
</sbml>
